<%-include("header")-%>
<body class="">
    <div class="bg"></div>
    <div class="bg bg2"></div>
    <div class="bg bg3"></div>
    <div class="container d-flex justify-content-center align-items-center" style="height: 100vh;">
        <div class="box" style="width: 400px; border: 10px solid black; border-radius: 10px;">
            <h1 class="mt-4 ms-4" style="font-family: monospace; text-decoration: underline;"><%=title%></h1>
            <ul class="mt-4">
                <% for(i in list){ %>
                    <li class="list-item item<%=i%> mb-4">
                        <form action="/delete" method="post">
                            <input type="checkbox" class="check-box check-box<%=i%>" name="itemId" value="<%=list[i]._id%>" onChange="this.form.submit()">
                            <input type="hidden" name="title" value="<%=title%>">
                            <p class="d-inline ms-3" style="font-size: large;"><%=list[i].name%></p>
                        </form>
                    </li>
                    <%} %> 
                </ul>
                <form action="/" method="post">
                    <div class="input-group mb-4">
                        <input type="text" name="newItem" class="form-control d-inline ms-4" placeholder="Add New Item">
                        <button type="submit" name='title' value="<%=title%>" class="btn btn-success d-inline me-4">+</button>
                    </div>
                </form>
        </div>
    </div>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.1/jquery.min.js"></script>
    <script src="./script/script.js"></script>
</body>
</html> 